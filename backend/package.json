{
  "name": "mgdc-backend",
  "version": "1.0.0",
  "description": "MGDC Fee & Attendance Backend (Node.js/Express/MongoDB)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Backend build completed'",
    "deploy": "chmod +x ../deploy.sh && ../deploy.sh",
    "prod": "NODE_ENV=production node server.js",
    "seed": "node scripts/seed_dev.js",
    "seed:timetable": "node scripts/seed_timetable.js",
    "seed:bulk": "node scripts/seed_bulk.js",
    "seed:realtime": "node scripts/seed_realtime_demo.js",
    "test:api": "node scripts/run_api_tests.js",
    "test": "npm run test:api",
    "backfill:payments:dry": "node scripts/backfill_payments_semester_and_status.js",
    "backfill:payments:commit": "node scripts/backfill_payments_semester_and_status.js --commit",
    "pm2:start": "pm2 start ecosystem.config.json --env production",
    "pm2:stop": "pm2 stop mgdc-fees",
    "pm2:restart": "pm2 restart mgdc-fees",
    "pm2:logs": "pm2 logs mgdc-fees",
    "pm2:status": "pm2 status"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.2",
    "multer": "^2.0.2",
    "pdfkit": "^0.15.2",
    "razorpay": "^2.9.6",
    "socket.io": "^4.8.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
