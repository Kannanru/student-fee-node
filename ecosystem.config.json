{
  "name": "mgdc-fees",
  "script": "server.js",
  "cwd": "/var/www/html/mgdc-fees/backend",
  "instances": 1,
  "exec_mode": "cluster",
  "env": {
    "NODE_ENV": "development",
    "PORT": 5000
  },
  "env_production": {
    "NODE_ENV": "production",
    "PORT": 5000,
    "HOST": "0.0.0.0"
  },
  "log_file": "/var/log/pm2/mgdc-fees.log",
  "out_file": "/var/log/pm2/mgdc-fees-out.log",
  "error_file": "/var/log/pm2/mgdc-fees-error.log",
  "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
  "merge_logs": true,
  "watch": false,
  "ignore_watch": ["node_modules", "uploads", "logs"],
  "max_memory_restart": "500M",
  "restart_delay": 4000,
  "max_restarts": 10,
  "min_uptime": "10s"
}